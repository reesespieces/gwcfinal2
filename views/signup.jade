  script.
    var userlist = {}; // CREATING DICTIONARY TO STORE INPUTTED FIELDS
    function validate(){
    var firstName = document.getElementById("firstName").value(); //GRAB VALUE OF THE INPUT IN THE FIELD FIRST NAME
    var lastName = document.getElementById("lastName").value(); //GRAB VALUE OF THE INPUT IN THE FIELD LAST NAME
    console.log(firstName); //LOGGING THE VARIABLE FIRST NAME
    console.log(lastName);
    userlist.push({'firstName':firstName, 'lastName': lastName}); //INSERTING THE VARIABLES IN THE DICTIONARY
    alert(userlist); //ALERT
    }
    validate();
  body
    // CREATING NAV BAR
    nav
      .nav-wrapper.cyan
        a(href='/home2', style='padding-left:30px;')

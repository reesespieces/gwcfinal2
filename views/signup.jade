    .center
      h2 Sign Up
    form(action='/adduser', method='post')
      // CREATE THE FORM FOR SIGNING UP
      .row
        form.col.s12
          .row
            .input-field.col.s6
              // FIRST NAME FORM
              input#firstName.validate(name='firstName', type='text')
              label(for='firstName') First Name
            .input-field.col.s6
              // LAST NAME FORM
              input#last_name.validate(name='lastName', type='text')
              label(for='lastName') Last Name
          .row
            .input-field.col.s12
              // USERNAME FORM
              input#inputUserName.validate(name='email', type='text')
              label(for='email') Email
          .row
            // PASSWORD FORM
            .input-field.col.s6
              input#password.validate(name='password', type='password')
              label(for='password') Password
    .center
      // SUBMIT BUTTON
      button#btnSubmit.waves-effect.waves-light.btn(onclick='validate()', type='sumbit') Submit
